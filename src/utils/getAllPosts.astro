import type { Frontmatter } from "@types";
import type { MDXInstance } from "astro";

export const getAllPosts = async () => {
	const mdx = await Astro.glob<Frontmatter>("../contents/**/*.mdx");
	const md = await Astro.glob<Frontmatter>("../contents/**/*.md");
	return [...mdx, ...md] as MDXInstance<Frontmatter>[];
};
